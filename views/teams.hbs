


<div class="container d-flex flex-column justify-content-center align-items-center col-12 col-md-12 col-sm-12 col-lg-8 col-xl-8" >
<h1>All workers list </h1>

<form class="form-inline d-flex justify-content-center" action="/teams" method="GET">
{{!-- <label for="">Search :</label> --}}
    <input type="text" name="search" placeholder="Search....." value="{{search}}"/>
    <input type="hidden" name="sort" value="{{sort}}"/>
    <input class="btn btn-secondary" type="submit" value="SEARCH"/>
    
</form>


<table class="table table-hover table-dark">
    <thead>
        <tr>
            <th class="th">Full Name:</th> 
            <th class="th">Age:</th>
            <th class="th"> Email:</th>
            <th class="th">Options</th>
        </tr>
    </thead>
    <tbody>
        {{#each teams}}
        <tr>
            <td>{{this.teamName}}</td>
            <td>{{this.MyAge}}</td>
            <td>{{this.MyEmail}}</td>
            <td>
                <a  href="/team/?id={{this._id}}"><i class="fas fa-edit text-secondary"></i></a>
                <a  href="/team-delete/?id={{this._id}}"><i class="fas fa-trash text-secondary"></i></a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

